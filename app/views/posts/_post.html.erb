
<div class="media">
  <%= render partial: 'votes/voting', locals: { post: post } %>
  <div class="media-body">
    <h4 class="media-heading">
      <%= link_to post.title, topic_post_path(post.topic, post) %>
    </h4
    <small>
      <% avatar_url = post.user.avatar_url(48) %>
      submitted <%= time_ago_in_words(post.created_at) %> ago by <%= image_tag avatar_url, class: 'media-object' %>
      <%= post.user.name %> <br>
      <%= post.comments.count %> Comments
    </small>
  </div>
</div>
